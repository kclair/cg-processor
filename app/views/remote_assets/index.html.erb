<h1>Listing remote_assets</h1>

<table>
  <tr>
    <th>Mime type</th>
    <th>Filename</th>
  </tr>

<% @remote_assets.each do |remote_asset| %>
  <tr>
    <td><%=h remote_asset.mime_from %></td>
    <td><%=h remote_asset.filename %></td>
    <td><%= link_to 'Show', remote_asset %></td>
    <td><%= link_to 'Edit', edit_remote_asset_path(remote_asset) %></td>
    <td><%= link_to 'Destroy', remote_asset, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New remote_asset', new_remote_asset_path %>
